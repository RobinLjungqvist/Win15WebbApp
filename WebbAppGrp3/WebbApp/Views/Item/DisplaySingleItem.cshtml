@model WebbApp.ViewModels.ItemViewModel


    <div class="row listItem">
        <div class="col-md-8 col-md-offset-2">
            <img src="@Model.Image" class="ListItemImage" />
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>@Model.Title</h2>
                @Html.DisplayFor(model => model.City)
                @Html.DisplayFor(model => model.Region)
                @Html.DisplayFor(model => model.ExpirationDate)
            </div>
            <div class="col-md-4">
                <h3>Description</h3>
                <p>
                    @Model.Description
                </p>
                @Html.ActionLink("Remove Item","RemoveItem", new {itemID = Model.ItemID })
                @Html.ActionLink("Edit Item", "EditItem", new { itemID = Model.ItemID })


            </div>

        </div>
    </div>
