 @model WebbApp.ViewModels.ItemViewModel
     
@{
    var editItem = new AjaxOptions
    {
        UpdateTargetId = "PartialContainer",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "GET"
    };
}

<div class="row listItem">
    <div class="col-md-3">
        <img src="../Images/@Model.Image" class="ListItemImage" alt="Picture is missing." />
        @*<img src="@Url.Content("~/Images/" + @Model.Image.Path)" class="ListItemImage" alt="Picture is missing." />*@
        @*<img src="@Url.Content("~/Images/" + System.IO.Path.GetFileName(Model.Image.Path))" alt="Picture is missing." class="ListItemImage"/>*@
    </div>
    <div class="col-md-3">
        <h2>@Model.Title</h2>
        @Html.DisplayFor(model => model.City)
        @Html.DisplayFor(model => model.Region)
        @Html.DisplayFor(model => model.ExpirationDate)
    </div>
    <div class="col-md-3">
        <h3>Description</h3>
        <p>
            @Model.Description
        </p>

    </div>
    <div class="col-md-3">
        <h3>Navigation</h3>
        @Ajax.ActionLink("Show Item", "DisplaySingleItem", "Item", new { itemID = Model.ItemID }, editItem)
    </div>
</div>
